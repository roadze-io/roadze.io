<div class="hidden md:flex md:flex-shrink-0">
  <div class="flex flex-col w-64">
    <div class="flex items-center h-16 flex-shrink-0 px-6 bg-blue-800 border-b border-gray-300">
      <%= link_to root_url do %>
        <h1 class="text-2xl text-white font-bold logo-font">roadze<span class="text-sm">.io</span></h1>
      <% end  %>
    </div>
    <div class="h-0 flex-1 flex flex-col overflow-y-auto">
      <!-- Sidebar component, swap this element with another sidebar if you like -->
      <nav class="flex-1 py-4 bg-blue-800">
        <% if current_request?(controller: 'user', action: ['dashboard']) %>
          <%= link_to authenticated_user_url do %>
            <div class="bg-blue-700 group flex items-center px-6 py-2 text-sm leading-5 text-white hover:text-gray-300 hover:bg-blue-600 focus:outline-none focus:bg-blue-700 transition ease-in-out duration-150">
              <div class="mr-3 h-6 w-6 text-gray-400 group-hover:text-gray-300 group-focus:text-gray-300 transition ease-in-out duration-150">
                <i class="far fa-tachometer-slow fa-lg"></i>
              </div>
              Dashboard
            </div>
          <% end %>
        <% else %>
          <%= link_to authenticated_user_url do %>
            <div class="group flex items-center px-6 py-2 text-sm leading-5 text-gray-300 hover:text-white hover:bg-blue-700 focus:outline-none focus:bg-blue-700 transition ease-in-out duration-150">
              <div class="mr-3 h-6 w-6 text-gray-400 group-hover:text-gray-300 group-focus:text-gray-300 transition ease-in-out duration-150">
                <i class="far fa-tachometer-slow fa-lg"></i>
              </div>
              Dashboard
            </div>
          <% end %>
        <% end %>

      </nav>
    </div>
  </div>
</div>