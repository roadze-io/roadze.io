<% flash.each do |key, value| %>
  <div x-data="flash()" x-show="isOpen()">
    <div class="fixed inset-0 flex items-end justify-center px-4 py-6 pointer-events-none sm:p-6 sm:items-start sm:justify-end" x-on:click.away="close">
    <!--
      Notification panel, show/hide based on alert state.
      Entering: "transform ease-out duration-300 transition"
    From: "translate-y-2 opacity-0 sm:translate-y-0 sm:translate-x-2"
    To: "translate-y-0 opacity-100 sm:translate-x-0"
    Leaving: "transition ease-in duration-100"
    From: "opacity-100"
    To: "opacity-0"
    -->
    <div class="max-w-sm w-full <%= flash_class(key) %> shadow-lg rounded-lg pointer-events-auto">
      <div class="rounded-lg shadow-xs overflow-hidden">
        <div class="p-4">
          <div class="flex items-start">
            <div class="flex-shrink-0">
              <%= flash_icon(key) %>
            </div>
            <div class="ml-3 w-0 flex-1 pt-0.5">
              <p class="text-sm leading-5 font-semibold text-white">
                <%= flash_title(key) %>
              </p>
              <p class="mt-1 text-sm leading-5 text-white">
                <%= value %>
              </p>
            </div>
            <div class="ml-4 flex-shrink-0 flex">
              <button class="inline-flex text-white focus:outline-none focus:text-gray-700 hover:text-black transition ease-in-out duration-150" x-on:click="close">
                <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
                </svg>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>
<% end %>

<script>
    function flash() {
      return {
          show: true,
          open() { this.show = true },
          close() { this.show = false },
          isOpen() { return this.show === true },
      }
    }
</script>