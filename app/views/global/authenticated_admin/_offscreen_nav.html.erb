<div class="md:hidden">
  <div @click="sidebarOpen = false" class="fixed inset-0 z-30 bg-gray-600 opacity-0 pointer-events-none transition-opacity ease-linear duration-300" :class="{'opacity-75 pointer-events-auto': sidebarOpen, 'opacity-0 pointer-events-none': !sidebarOpen}"></div>
  <div class="fixed inset-y-0 left-0 flex flex-col z-40 max-w-xs w-full bg-red-800 transform ease-in-out duration-300 -translate-x-full" :class="{'translate-x-0': sidebarOpen, '-translate-x-full': !sidebarOpen}">
    <div class="absolute top-0 right-0 -mr-14 p-1">
      <button x-show="sidebarOpen" @click="sidebarOpen = false" class="flex items-center justify-center h-12 w-12 rounded-full focus:outline-none focus:bg-gray-600">
        <svg class="h-6 w-6 text-white" stroke="currentColor" fill="none" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
    <div class="flex-shrink-0 flex items-center h-16 px-4 bg-red-800">
      <%= link_to root_url do %>
        <h1 class="text-2xl text-white font-bold logo-font">roadze<span class="text-sm">.io</span></h1>
      <% end  %>
    </div>
    <div class="flex-1 h-0 overflow-y-auto">
      <nav class=" py-4">
        <% if current_request?(controller: 'admin', action: ['dashboard']) %>
          <%= link_to authenticated_admin_url, class: 'group flex items-center px-4 py-2 text-base leading-6 font-medium text-white bg-red-700 focus:outline-none focus:bg-red-700 hover:bg-red-500 transition ease-in-out duration-150' do %>
            <i class="far fa-tachometer-slow fa-lg mr-4 text-gray-300 group-hover:text-gray-300 group-focus:text-gray-300 transition ease-in-out duration-150"></i>
            Dashboard
          <% end %>
        <% else %>
          <%= link_to authenticated_admin_url, class: 'group flex items-center px-4 py-2 text-base leading-6 font-medium text-white hover:bg-red-700 focus:outline-none focus:bg-red-700 hover:bg-red-500 transition ease-in-out duration-150' do %>
            <i class="far fa-tachometer-slow fa-lg mr-4 text-gray-300 group-hover:text-gray-300 group-focus:text-gray-300 transition ease-in-out duration-150"></i>
            Dashboard
          <% end %>
        <% end  %>

        <% if current_request?(controller: 'page_visits', action: ['index']) %>
          <%= link_to backend_pages_page_visits_url, class: 'mt-2 group flex items-center px-4 py-2 text-base leading-6 font-medium text-white bg-red-700 focus:outline-none focus:bg-red-700 hover:bg-red-500 transition ease-in-out duration-150' do %>
            <i class="far fa-glasses fa-lg mr-4 text-gray-300 group-hover:text-gray-300 group-focus:text-gray-300 transition ease-in-out duration-150"></i>
            Page visits
          <% end %>
        <% else %>
          <%= link_to backend_pages_page_visits_url, class: 'mt-2 group flex items-center px-4 py-2 text-base leading-6 font-medium text-white hover:bg-red-700 focus:outline-none focus:bg-red-700 hover:bg-red-500 transition ease-in-out duration-150' do %>
            <i class="far far fa-glasses fa-lg mr-4 text-gray-300 group-hover:text-gray-300 group-focus:text-gray-300 transition ease-in-out duration-150"></i>
            Page visits
          <% end %>
        <% end %>

        <% if current_request?(controller: 'bot_trackers', action: ['index']) %>
          <%= link_to backend_pages_bot_trackers_url, class: 'mt-2 group flex items-center px-4 py-2 text-base leading-6 font-medium text-white bg-red-700 focus:outline-none focus:bg-red-700 hover:bg-red-500 transition ease-in-out duration-150' do %>
            <i class="far fa-robot fa-lg mr-4 text-gray-300 group-hover:text-gray-300 group-focus:text-gray-300 transition ease-in-out duration-150"></i>
            Bot tracker
          <% end %>
        <% else %>
          <%= link_to backend_pages_bot_trackers_url, class: 'mt-2 group flex items-center px-4 py-2 text-base leading-6 font-medium text-white hover:bg-red-700 focus:outline-none focus:bg-red-700 hover:bg-red-500 transition ease-in-out duration-150' do %>
            <i class="far fa-robot fa-lg mr-4 text-gray-300 group-hover:text-gray-300 group-focus:text-gray-300 transition ease-in-out duration-150"></i>
            Bot tracker
          <% end %>
        <% end %>
        <% if current_request?(controller: 'bot_trackers', action: ['index']) %>
          <%= link_to backend_pages_cookies_acceptances_url, class: 'mt-2 group flex items-center px-4 py-2 text-base leading-6 font-medium text-white bg-red-700 focus:outline-none focus:bg-red-700 hover:bg-red-500 transition ease-in-out duration-150' do %>
            <i class="far fa-cookie-bite fa-lg mr-4 text-gray-300 group-hover:text-gray-300 group-focus:text-gray-300 transition ease-in-out duration-150"></i>
            Cookie acceptance
          <% end %>
        <% else %>
          <%= link_to backend_pages_cookies_acceptances_url, class: 'mt-2 group flex items-center px-4 py-2 text-base leading-6 font-medium text-white hover:bg-red-700 focus:outline-none focus:bg-red-700 hover:bg-red-500 transition ease-in-out duration-150' do %>
            <i class="far fa-cookie-bite fa-lg mr-4 text-gray-300 group-hover:text-gray-300 group-focus:text-gray-300 transition ease-in-out duration-150"></i>
            Cookie acceptance
          <% end %>
        <% end %>

      </nav>
    </div>
  </div>
</div>